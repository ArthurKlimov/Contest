<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper.js/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/vue/vue.min.js"></script>
    <script src="https://kit.fontawesome.com/2ae7c006c6.js" crossorigin="anonymous"></script>
</head>
<body style="background-color: #fafafa; padding-top: 5.5em;">
    <div class="fixed-top border-bottom" style="background-color: #FFF;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-8">
                    <nav class="nav align-items-center">
                        <a href="/" class="nav-link text-dark pl-0"><img style="width: 80px;" class="" src="~/images/logo.png" alt="Логотип MixPrize" /></a>
                        <a href="#" class="nav-link text-dark">О сервисе</a>
                        <a href="#" class="nav-link text-dark">Обратная связь</a>
                        <a href="#" class="nav-link text-dark">Новости</a>
                    </nav>
                </div>
                <div class="col-4 pl-0">
                    <a id="addContestButton" href="/contests/add" class="nav-link float-right btn btn-primary">
                        Добавить конкурс или розыгрыш
                    </a>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
    <footer class="mt-4 border-top" style="background-color: #FFF; height: 10em;">
        <div class="container">
            <div class="row mt-2">
                <div class="col-11">
                    <a href="#" class="nav-link text-dark">О сервисе</a>
                    <a href="#" class="nav-link text-dark">Обратная связь</a>
                    <a href="#" class="nav-link text-dark">Новости</a>
                </div>
                <div class="col-1">
                    <a href="/" class="nav-link text-dark pl-0"><img style="width: 80px;" class="" src="~/images/logo.png" alt="Логотип MixPrize" /></a>
                </div>
            </div>
        </div>
    </footer>
